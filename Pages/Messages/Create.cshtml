@page
@model ChatApp.Pages.Messages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.UserId" class="control-label"></label>
                <select asp-for="Message.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.ChatRoomId" class="control-label"></label>
                <select asp-for="Message.ChatRoomId" class="form-control" asp-items="ViewBag.ChatRoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
