@page "{roomId:int}"
@model ChatApp.Pages.Messages.ChatRoomModel
@{
    ViewData["Title"] = "Chat Room: " + Model.ChatRoom.Name;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>@Model.ChatRoom.Name</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="chat-container" style="height: 400px; overflow-y: auto; background-color: #FBFAF5  ; border: 1px solid #ddd; padding: 15px;">
                @foreach (var message in Model.Messages)
                {
                    <div class="message @(message.User.Id == 1 ? "text-end author-message" : "")">
                        <strong>@message.User.FullName:</strong>
                        <p>@message.Content</p>
                        <small class="text-muted">@message.Timestamp.ToString("g")</small>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <form method="post">
                <div class="input-group">
                    <input type="text" name="messageContent" class="form-control" placeholder="Type a message...">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .message {
        margin-bottom: 15px;
    }
        .message p {
            background-color: #f1f0f0;
            border-radius: 15px;
            padding: 10px;
            display: inline-block;
        }

        .author-message P{
            background-color: #90caf9;

        }
</style>